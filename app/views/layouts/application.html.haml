%html
  %head
    %title= "#{yield(:title)} | gArena"
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag    params[:controller]
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag params[:controller]
    = csrf_meta_tags
    %meta{:name => "viewport", :content => "width=device-width"}
  %body{:style => "padding-top: 70px;"}
    %nav.navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        .navbar-header
          %button{:type => "button", :class => "navbar-toggle collapsed", :data => {"toggle" => "collapse", "target" => "#collapse-button"}}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a{:class => "navbar-brand", :href => "/"} gArena

        .collapse.navbar-collapse#collapse-button
          %p.navbar-text.navbar-right
            - if user_signed_in?
              Signed in as
              = link_to current_user.email, users_path
            - else
              = link_to "Sign in", users_path
    .container
      - if notice
        .alert.alert-succes{:role => "alert"}= notice
      =yield
