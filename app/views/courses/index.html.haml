- content_for :title, 'All courses'

%h1= t('.all_courses')
.row
  - @courses.each do |course|
    .col.s4
      %div{:class => "card hoverable"}
        .card-content
          .card-title= link_to course.name, course_path(:id => course.id)
          %p
            = t('.coursesubject_courseteacher', :coursesubject => (course.subject), :courseteacher => (course.teacher))
- if can? :manage, :courses
  %hr
  = link_to t('.new_course'), new_course_path
